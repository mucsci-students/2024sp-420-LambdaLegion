{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "UML Diagram",
    "description": "Schema for representing a UML diagram.",
    "properties": {
      "classes": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "fields": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            },
            "methods": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "params": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      },
                      "required": ["name"]
                    }
                  }
                },
                "required": ["name", "params"]
              }
            }
          },
          "required": ["name", "fields", "methods"]
        }
      },
      "relationships": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "source": {
              "type": "string"
            },
            "destination": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          },
          "required": ["source", "destination", "type"]
        }
      }
    },
    "required": ["classes", "relationships"]
  }
  